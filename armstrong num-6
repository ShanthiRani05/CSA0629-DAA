
#include <stdio.h>
#include <math.h>

int isArmstrong(int n) {
    int original = n, sum = 0, count = 0, temp;

    temp = n;
    while (temp > 0) {
        count++;
        temp /= 10;
    }

    temp = n;
    while (temp > 0) {
        int digit = temp % 10;
        sum += pow(digit, count);
        temp /= 10;
    }

    return sum == original;
}

int main() {
    int num = 153;
    printf("Input: 153\nOutput: %s\n", isArmstrong(num) ? "True" : "False");

    num = 419;
    printf("Input: 419\nOutput: %s\n", isArmstrong(num) ? "True" : "False");

    return 0;
}
